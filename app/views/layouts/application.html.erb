<!DOCTYPE html>
<html>
<head>
  <title>Homeserver</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="lcars-container">

      <!-- TOP ROW
      =========================================================== -->
      <div class="lcars-row spaced">
        <!-- TOP LEFT ELBOW
        =========================================================== -->
        <div class="lcars-column u-1-8 lcars-elbow left bottom lcars-blue-bg">
          <a href="#" >Lights</a>
        </div>

        <!-- TOP DIVIDER AND BUTTONS
        =========================================================== -->
        <div class="lcars-column u-6-8 lcars-divider lcars-blue-tan-divide">
          <div class="lcars-row">
            <div class="lcars-column u-2-3">
              <h1 class="left"><%= yield :headline %></h1>
            </div>
            <div class="lcars-column u-1-3">

            </div>
          </div>
        </div>

        <!-- TOP RIGHT ELBOW
        =========================================================== -->
        <div class="lcars-column u-1-8 lcars-elbow right bottom lcars-tan-bg">
          <a href="#" >Settings</a>
        </div>
      </div>

      <div class="lcars-row">

        <!-- LEFT MENU
        =========================================================== -->
        <div class="lcars-column u-1-8">
          <ul class="lcars-menu">
            <li class="lcars-blue-bg"><a href="#" draggable="true">Network</a></li>
            <li class="lcars-blue-bg tall large-gap">Equipment</li>
            <li class="lcars-tan-bg tall">Living room</li>
            <li class="lcars-tan-bg">Bed room</li>
            <li class="lcars-tan-bg">Bath</li>
            <li class="lcars-tan-bg">Child</li>
          </ul>
        </div>

        <!-- CENTER SECTION
        =========================================================== -->
        <div class="lcars-column u-6-8">
          <div class="lcars-row">
            <div class="lcars-column u-1-1">
              <%= yield %>
            </div>
          </div>
        </div>

        <!-- RIGHT MENU
        =========================================================== -->
        <div class="lcars-column u-1-8">
          <ul class="lcars-menu right">
            <li class="lcars-tan-bg tall">
              <%= link_to "Bluetooth Devices", bluetooth_devices_path() %>
            </li>
            <li class="lcars-tan-bg large-gap">Events</li>
            <li class="lcars-blue-bg">Security</li>
            <li class="lcars-blue-bg">Crew</li>
            <li class="lcars-blue-bg">Energy</li>
            <li class="lcars-blue-bg tall">Leaving Home</li>
          </ul>
        </div>
      </div>

      <!-- BOTTOM ROW
      =========================================================== -->
      <div class="lcars-row spaced">

        <!-- BOTTOM LEFT ELBOW
        =========================================================== -->
        <div class="lcars-column u-1-8 lcars-elbow left top lcars-tan-bg">
          <a href="#" draggable="true">Rooms</a>
        </div>

        <!-- BOTTOM DIVIDER AND BUTTONS
        =========================================================== -->
        <div class="lcars-column u-6-8 lcars-divider bottom lcars-tan-blue-divide">
          <div class="lcars-row">
            <div class="lcars-column u-1-1">&nbsp;</div>
          </div>
        </div>

        <!-- BOTTOM RIGHT ELBOW
        =========================================================== -->
        <div class="lcars-column u-1-8 lcars-elbow right top lcars-blue-bg">
          <a href="#" draggable="true">Status</a>
        </div>
      </div>

    </div>
</body>
</html>
